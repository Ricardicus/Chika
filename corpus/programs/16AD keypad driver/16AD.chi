
[prev= N
 ms=   N]

(fn heartbeat ctx
  (binds (.. ctx)
    press= N
    v= (ana-r 21)
    k= (/ (+ v 20) 64)
    (..
      (if (and prev (< (+ ms 50) (ms-now)))
        [press= prev
         prev=  N
         ms=    N]
        (if (< k 16)
          [prev= k
           ms=   (ms-now)])))
    (..
      (if press
        (if first
          (val [first= N]
            (pub "keypad/byte"
                 (cast (| (<< first 4) press) 0x13)))
          [first= press])))))